<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>igloo15.MarkdownApi.Core</AssemblyName>
    <RootNamespace>igloo15.MarkdownApi.Core</RootNamespace>
    <BaseOutputPath>$(MSBuildProjectFullPath)\..\..\..\dist\MarkdownApi.Core</BaseOutputPath>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <PropertyGroup>
    <IsPackable>true</IsPackable>
    <PackageVersion>$(Version)</PackageVersion>
    <PackageIconUrl>igloo15.MarkdownApi.Core</PackageIconUrl>
    <Title>igloo15.MarkdownApi.Core</Title>
    <Authors>igloo15, jyasuu, neuecc</Authors>
    <Description>Core library for the MarkdownApi.Tool cli packages</Description>
    <PackageProjectUrl>https://github.com/igloo15/MarkdownGenerator</PackageProjectUrl>
    <PackageTags>markdown;dotnet;cli;tool;netcore</PackageTags>
    <RepositoryUrl>https://github.com/igloo15/MarkdownGenerator.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageReleaseNotes>See $(PackageProjectUrl)/blob/master/CHANGELOG.md for release notes</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.FileSystemGlobbing" Version="2.2.0" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="2.2.0" />
    <PackageReference Include="System.Json" Version="4.5.0" />
  </ItemGroup>

</Project>
